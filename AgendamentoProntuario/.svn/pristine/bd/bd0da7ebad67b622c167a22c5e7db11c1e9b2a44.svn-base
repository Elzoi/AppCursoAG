<div class="container">
    <div class="agendamento">
      <form #formAtestado="ngForm">
  
        <h5>Dados do Agendamento</h5>
        <hr />
  
        <div class="form-group">
          <label>Data Inícial</label>
          <input 
            type="date" 
            class="form-control" 
            autocomplete="false" 
            name="dataInicial" 
            required 
            ngModel 
            #inputDataInicial="ngModel"
            >
          <small *ngIf="inputDataInicial.valid && inputDataInicial.touched" class="form-text text-success">Ok</small>
          <small *ngIf="!inputDataInicial.valid && inputDataInicial.touched" class="form-text text-danger">Data inválida</small>
        </div>

        <div class="form-group">
            <label>Data Final</label>
            <input 
              type="date" 
              class="form-control" 
              autocomplete="false" 
              name="dataFinal" 
              required 
              ngModel 
              #inputDataFinal="ngModel"
              >
            <small *ngIf="inputDataFinal.valid && inputDataFinal.touched" class="form-text text-success">Ok</small>
            <small *ngIf="!inputDataFinal.valid && inputDataFinal.touched" class="form-text text-danger">Data inválida</small>
          </div>
  
        <button
          type="button"
          class="btn btn-success"
          >
          Recuperar
        </button>

        <br />
        <br />

        <h4>Agendas Disponíveis</h4>
        <div class="form-group">
            <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Data</th>
                    <th>Dia Semana</th>
                    <th>Hora</th>
                    <th>Médico</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <tr ng-repeat="agenda in agendasDisponiveis">
                    <td>{{agenda.data}}</td>
                    <td>{{agenda.diaSemana}}</td>
                    <td>{{agenda.hora}}</td>
                    <td>{{agenda.medico}}</td>
                    <td>
                      <input
                       class="form-check-input"
                       type="checkbox"
                       name="gridAgenda"
                       ngModel
                      >
                    </td>
                  </tr>
                </tbody>
              </table>          
        </div>
  
        <button
          type="submit"
          class="btn btn-primary"
          >
          Solicitar Agendamento
        </button>
  
      <br />
      <br />
      </form>
    </div>
  </div>